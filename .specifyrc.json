{
  "repository": "@acme-inc/all-design-data",
  "head": "specify",
  "base": "main",
  "rules": [
    {
      "name": "Colors",
      "path": "./output/styles/colors.scss",
      "filter": {
        "types": [
          "color"
        ]
      },
      "parsers": [
        {
          "name": "sort-by",
          "options": {
            "keys": [
              "name"
            ]
          }
        },
        {
          "name": "to-scss-variables",
          "options": {
            "formatName": "camelCase",
            "formatTokens": {
              "color": "hex"
            }
          }
        }
      ]
    }
  ]
}
