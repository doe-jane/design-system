{
  "repository": "@acme-inc/minji",
  "head": "specifyrc-json",
  "base": "main",
  "rules": [
    {
      "name": "Design Tokens",
      "path": "./output/styles",
      "filter": {
        "types": [
          "color",
          "measurement",
          "textStyle"
        ]
      },
      "parsers": [
        {
          "name": "to-flutter",
          "options": {
            "formatByType": {
              "color": {
                "className": "Colors",
                "fileName": "colors.dart",
                "classType": "Color"
              },
              "measurement": {
                "devicePixelRatio": 3,
                "className": "Measurements",
                "fileName": "measurements.dart",
                "classType": "double"
              },
              "textStyle": {
                "className": "TextStyles",
                "fileName": "text-styles.dart",
                "classType": "TextStyle"
              }
            }
          }
        }
      ]
    },
    {
      "name": "Design Tokens / Vectors",
      "path": "./output/assets/vectors",
      "filter": {
        "types": [
          "vector"
        ]
      },
      "parsers": [
        {
          "name": "kebabcasify"
        },
        {
          "name": "svgo",
          "options": {
            "svgo": {
              "js2svg": {
                "pretty": true
              }
            }
          }
        }
      ]
    },
    {
      "name": "Design Tokens / Import font files",
      "path": "./output/assets/fonts",
      "filter": {
        "types": [
          "font"
        ]
      },
      "parsers": [
        {
          "name": "convert-font",
          "options": {
            "formats": [
              "ttf"
            ]
          }
        }
      ]
    }
  ]
}